<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Required meta tags -->
    <link rel="stylesheet" href="/CSS/Login.css">
    <title> EPILEPSUM </title>
</head>

<body>
    <div class="contenedor-form">
        <div class="toggle">
            <span><a href="/Registro">Crear Cuenta</a></span>
        </div>
        <!-- Aquí comienza el primer formulario -->
        <div class="formulario">
            <div id="img">
                <img src="/img/Logo_epilepsum.png" alt="Logo" class="img">
            </div>

            <h1 id="h1">EPILEPSUM</h1>

            <form action="/Login" method="POST">
                <div id="inputNombre">
                    <input id="nombreIntxt" type="userName"     name="username"     placeholder="Usuario"   required>
                </div>

                <div id="inputPass">
                    <input id="passIntxt"   type="password"     name="password"     placeholder="Contraseña"    required>
                </div>

                <div id="boton">
                <button id="boton-login" class="btn btn-primary" type="submit">Ingresar</button>
                </div>
            </form>
        </div>
        <!-- Aquí termina el primer formulario -->
        <div class="reset-password">
            <a href="#">Olvidé mi Contraseña</a>
        </div>
    </div>
    <script src="#"></script>
</body>

</html>